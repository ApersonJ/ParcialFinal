# Excluir resultados generados y scripts
EXCLUDE                = results \
                         scripts

EXCLUDE_PATTERNS       = */results/* \
                         */scripts/* \
                         */*.pdf

#---------------------------------------------------------------------------
# Source code extraction
#---------------------------------------------------------------------------

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = YES
EXTRACT_STATIC         = YES
